rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for active submissions
    match /submissions/{submissionId} {
      allow create: if true; // Allows the website to create new submissions
      allow read, update, delete: if request.auth != null; // Allows admins to manage them
    }

    // Rules for archived submissions
    match /archived-submissions/{submissionId} {
      // ONLY authenticated admins can read, create, update, or delete archived items
      allow read, create, update, delete: if request.auth != null;
    }

    // Rules for the form configuration
    match /forms/{formId} {
      allow read: if true;
    }
  }
}

